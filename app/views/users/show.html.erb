<% provide(:title1, @user.full_name) %>
<% provide(:title2, @user.user_name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.user_name %>
</h1>

<%= render 'follow_form' if logged_in? %>

<section class="stats">
  <%= render 'shared/stats' %>
</section>

<p><%= link_to "プロフィールを編集", edit_user_path(@user) %></p>
<p><%= link_to "ログアウト", logout_path, method: :delete %></p>

<div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>