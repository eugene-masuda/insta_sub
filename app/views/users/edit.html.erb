<% provide(:title1, "プロフィールを編集") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      
    <div class="gravatar_edit">
      <%= gravatar_for(@user, size: 40) %>
      <%= @user.user_name %>
      <a href="http://gravatar.com/emails" target="_blank">プロフィール写真を変更</a>
    </div>

      <%= f.label "名前" %>
      <%= f.text_field :full_name, class: 'form-control' %>

      <%= f.label "ユーザーネーム" %>
      <%= f.text_field :user_name, class: 'form-control' %>
      
      <%= f.label "ウェブサイト" %>
      <%= f.text_field :website, class: 'form-control' %>
      
      <%= f.label "自己紹介" %>
      <%= f.text_field :introduction, class: 'form-control' %>
      
      <p>非公開情報</p>

      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label "電話番号" %>
      <%= f.email_field :phone_number, class: 'form-control' %>

      <%= f.label "性別" %>
      <%= select_tag(:select_sex, options_for_select([ ['未選択', 0], ['男性', 1], ['女性', 2], ['答えたくない', 3] ]) ) %>

      <%= f.submit "送信する", class: "btn btn-primary" %>
      <p></p>
      <%= link_to "アカウントを削除する", '#' %>
    <% end %>

  </div>
</div>
