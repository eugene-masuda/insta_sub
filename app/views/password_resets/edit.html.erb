<% provide(:title1, "パスワードを変更") %>

<%= link_to "プロフィールを編集", edit_user_path %>
<%= link_to "パスワードを変更", edit_password_reset_path %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
    <div class="gravatar_edit">
      <%= gravatar_for(@user, size: 40) %>
      <%= @user.user_name %>
      <a href="http://gravatar.com/emails" target="_blank">プロフィール写真を変更</a>
    </div>

      <%= f.label "現在のパスワード" %>
      <%= f.password_field :password_now, class: 'form-control' %>

      <%= f.label "新しいパスワード" %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label "新しいパスワードを確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "パスワードを変更", class: "btn btn-primary" %>
      <p></p>
      <%= link_to "アカウントを削除する", '#' %>
    <% end %>

  </div>
</div>
